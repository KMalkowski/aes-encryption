<div class="container">
        <form action="/" method="POST">
            <h1>Proszę wpisać tekst do zaszyfrowania.</h1>
            <div class="mb-3">
                <label for="text_name" class="form-label">Nazwa tekstu</label>
                <input type="text" class="form-control" id="text_name" name="text_name" placeholder="podaj nazwę, po której później rozpoznasz tekst">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Hasło</label>
                <input type="text" class="form-control" id="password" name="password" placeholder="hasło do szyfrowania">
            </div>
            <div class="mb-3">
                <label for="text_cypher" class="form-label">Tekst do zaszyfrowania</label>
                <textarea class="form-control" id="text_cypher" name="text_cypher" rows="3"></textarea>
            </div>
            <button type="sumbit" class="btn btn-primary">Szyfruj</button>
        </form>
    </div>

    <div class="container mt-5">
        <h3>Twoje zaszyfrowane pliki.</h3>
        <table class="table table-hover">
            <thead>
                <tr>
                <th scope="col">Nazwa</th>
                <th scope="col">Hasło</th>
                <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each files}}
                    <tr>
                        <td>{{.}}</td>
                        <form action="/decode" method="post">
                            <input type="text" name="file" value="{{.}}" hidden>
                            <td>
                                <input class="form-control" type="password" name="password" placeholder="hasło do pliku">
                            </td>
                            <td>
                                <button class="btn btn-primary text-white">Rozszyfruj</button>
                            </td>
                        </form>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>